<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:padding="10dp">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B22222"
        android:text="PAGOS"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="15dp"
        android:textStyle="bold" />

    <!-- Contenedor de Productos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Producto 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@android:color/white"
                android:layout_marginBottom="10dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/producto1"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electrodoméstico"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product_description_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Un excelente microondas"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="#555555" />

                    <TextView
                        android:id="@+id/product_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio: $150.00"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/holo_green_dark" />

                    <Button
                        android:id="@+id/btn_buy_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#FF5733"
                        android:text="Volver a Comprar"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Producto 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@android:color/white"
                android:layout_marginBottom="10dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/producto2"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ropa"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product_description_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camiseta de algodón"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="#555555" />

                    <TextView
                        android:id="@+id/product_price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio: $25.50"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/holo_green_dark" />

                    <Button
                        android:id="@+id/btn_buy_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volver a Comprar"
                        android:layout_marginTop="5dp"
                        android:background="#FF5733"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Botón Volver -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:background="#4CAF50"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>
